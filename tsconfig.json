{
  "extends": "./node_modules/@ivy/configs/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ivy/core": [
        "packages/core"
      ],
      "@ivy/chart": [
        "packages/chart"
      ],
      "@ivy/request": [
        "packages/request"
      ],
      "@ivy/form": [
        "packages/form"
      ],
      "@ivy/cache": [
        "packages/cache"
      ],
      "@ivy/cipher": [
        "packages/cipher"
      ],
      "@shared/*": [
        "shared/*"
      ],
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "apps/**/*.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "mock/**/*.ts",
    "mock/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "shared/**/*.d.ts",
    "node_modules/@ivy/configs/global.d.ts" // 全局类型
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}