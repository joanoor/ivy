{
  "extends": "./node_modules/@ivy/configs/base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ivy/core": [
        "./packages/core"
      ],
      "@ivy/chart": [
        "./packages/chart"
      ],
      "@ivy/request": [
        "./packages/request"
      ],
      "@ivy/form": [
        "./packages/form"
      ],
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "node_modules/@ivy/configs/global.d.ts" // 全局类型
  ],
  "exclude": [
    "dist"
  ]
}