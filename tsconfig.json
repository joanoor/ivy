{
  "extends": "./node_modules/@ivy/configs/base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@ivy/core": [
        "core/src"
      ],
      "@ivy/chart": [
        "chart/src"
      ],
      "@ivy/request": [
        "request/src"
      ],
      "@ivy/form": [
        "form/src"
      ],
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "node_modules/@ivy/configs/global.d.ts" // 全局类型
  ],
  "exclude": [
    "dist"
  ]
}