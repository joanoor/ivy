{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#/*": [
        "types/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "build/**/*.ts",
    "vite.config.ts",
    "mock/**/*.ts",
    "types/**/*.ts",
    "node_modules/@ivy/configs/global.d.ts"
  ]
}