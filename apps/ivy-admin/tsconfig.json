{
  "extends": "./node_modules/@ivy/configs/base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": [
      "element-plus/global"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#/*": [
        "types/*"
      ],
      "@ivy/core": [
        "../../packages/core"
      ],
      "@ivy/chart": [
        "../../packages/chart"
      ],
      "@ivy/request": [
        "../../packages/request"
      ],
      "@ivy/form": [
        "../../packages/form"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "mock/**/*.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "node_modules/@ivy/configs/global.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}