{
  "extends": "./node_modules/@ivy/configs/base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "types": [
      "element-plus/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@views": [
        "src/views/*"
      ],
      "@utils": [
        "src/utils/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ],
      "@scripts/*": [
        "scripts/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "scripts/**/*.ts",
    "scripts/**/*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}